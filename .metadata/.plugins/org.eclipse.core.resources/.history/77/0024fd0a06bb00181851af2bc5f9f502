<project name="Project1" default="compile" basedir=".">

<description>
Project 1 Build File
</description>

<property name="source.dir" location="src"/>
<property name="build.dir" location="bin"/>
<property name="dist.dir" location="dist"/>
<property name="doc.dir" location="doc"/>
	
    <target name="init">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${dist.dir}"/>
        <mkdir dir="${doc.dir}"/>
    </target>
    
    <target name="compile" depends="init"> 
        <javac srcdir="${source.dir}" destdir="${build.dir}">
            <classpath>
                <pathelement location="lib/junit-4.10.jar"/>
            </classpath>  
        </javac>
    </target>
    
     <target name="doc" depends="init">
        <javadoc sourcepath="${source.dir}" destdir="${doc.dir}">
            <fileset dir="."/>
            <classpath>
                <pathelement location="lib/junit-4.10.jar"/>
            </classpath>  
        </javadoc>
    </target>

    <target name="dist" depends="compile">
        <jar destfile="${dist.dir}/SearchMap.jar" basedir="${build.dir}">
            <manifest>
                <attribute name="Main-Class" value="SearchMap"/>
            </manifest>
        </jar>
        <jar destfile="${dist.dir}/FlightMap.jar" basedir="${build.dir}">
            <manifest>
                <attribute name="Main-Class" value="FlightMap"/>
            </manifest>
        </jar>
    </target>

    <target name="test" depends="compile">
        <junit printsummary="on" fork="true" showoutput="true">
            <classpath>
            		<pathelement location = "bin"/>
            		<pathelement location = "lib/junit-4.10.jar"/>
            </classpath>  
            <batchtest>
            		<fileset dir="src/projectone">
            			<include name = "TestFlightMap"/>
            			<include name = "TestSearchMap"/>
            			<include name = "TestCity"/>
            			<include name = "TestCityComparator"/>
            		</fileset>
         	</batchtest>
            	<formatter type ="brief" usefile="false"/>
        </junit>
    </target>

    <target name="clean">
        <delete dir="${build.dir}"/>
        <delete dir="${doc.dir}"/>
        <delete dir="${dist.dir}"/>
    </target>

</project>